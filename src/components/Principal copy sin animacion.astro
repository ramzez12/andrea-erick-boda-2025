<!-- Modal para el video -->
<div id="video-modal" class="hidden fixed inset-0 z-50">
  <div class="absolute inset-0 bg-cover bg-center blur-2xl opacity-40" 
       style="background-image: url('/imagenes/portada2.webp');"></div>
  <div class="absolute inset-0 bg-black bg-opacity-50"></div>
  
  <div class="relative w-full h-full flex justify-center items-center">
    <button id="cerrar-video" class="absolute top-4 right-4 bg-white/90 backdrop-blur-md border border-white/50 text-[#5a6650] rounded-full px-4 py-2 flex items-center gap-1.5 z-20 hover:bg-white hover:scale-105 transition-all shadow-lg">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <span class="font-serif text-xs tracking-wide font-medium">Volver</span>
    </button>
    
    <video id="video-player" class="w-full h-full object-cover md:object-contain" controls>
      <source src="/video/video.mp4" type="video/mp4">
      Tu navegador no soporta el video.
    </video>
  </div>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Great+Vibes&family=Cormorant:wght@300;400;600;700&display=swap');
  
  .font-script {
    font-family: 'Great Vibes', cursive;
  }
  
  .font-serif {
    font-family: 'Cormorant', serif;
  }

  /* Personalizar controles del video */
  #video-player::-webkit-media-controls-play-button {
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
  }
  
  #video-player::-webkit-media-controls-panel {
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  }
</style>

<script>
  if (typeof window !== 'undefined') {
    document.addEventListener("DOMContentLoaded", () => {
      const sobreContainer = document.getElementById('sobre-container');
      const videoModal = document.getElementById('video-modal');
      const videoPlayer = document.getElementById('video-player');
      const cerrarVideo = document.getElementById('cerrar-video');

      sobreContainer?.addEventListener('click', () => {
        videoModal?.classList.remove('hidden');
        // Reproducir el video con sonido cuando se hace clic en el sobre
        if (videoPlayer) {
          videoPlayer.muted = false;
          videoPlayer.play();
        }
      });

      const cerrarModal = () => {
        videoModal?.classList.add('hidden');
        videoPlayer?.pause();
        if (videoPlayer) {
          videoPlayer.currentTime = 0;
          videoPlayer.muted = true; // Volver a mutear para la pr贸xima vez
        }
      };

      cerrarVideo?.addEventListener('click', cerrarModal);
      
      videoModal?.addEventListener('click', (e) => {
        if (e.target === videoModal) {
          cerrarModal();
        }
      });
    });
  }
</script>